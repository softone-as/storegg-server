<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Payment Type</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item">
                            <a href="/payment">Payment Type</a>
                        </li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">
                                Form Update Payment <%= payment.type %>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form
                            action="/payment/edit/<%= payment._id %>?_method=PUT"
                            method="POST"
                        >
                        <div class="card-body">
                            <div class="form-group">
                                <label for="type">Type</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="type"
                                    name="type"
                                    placeholder="Enter type"
                                    value="<%= payment.type %>"
                                />
                            </div>
                            <div class="form-group">
                                <label>Bank</label>
                                <div class="select2-purple">
                                    <select
                                        class="form-control select2"
                                        multiple="multiple"
                                        style="width: 100%"
                                        name="banks"
                                        data-placeholder="Choose Bank"
                                        required
                                    >
                                    <% bank.forEach(bank => { %>
                                        <option value="<%= bank._id %>"
                                            <% payment.banks.forEach(paymentBank => { %>
                                                <% if (paymentBank._id.toString() === bank?._id.toString()) { %>
                                                    selected
                                                <% } %>    
                                            <% }) %>
                                        >
                                            <%= bank.name %> | <%=
                                            bank.username %> | <%= bank.accountNumber %>
                                        </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
