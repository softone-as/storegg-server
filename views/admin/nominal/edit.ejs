<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Nominal</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item">
                            <a href="/nominal">Nominal</a>
                        </li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">
                                Form Update Nominal <%= nominal.name %>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form
                            action="/nominal/edit/<%= nominal.id %>?_method=PUT"
                            method="POST"
                        >
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Coin Name</label>
                                    <select
                                        class="form-control select2"
                                        style="width: 100%"
                                        name="coinName"
                                        required
                                    >
                                        <option selected="selected">
                                            Choose Coin
                                        </option>
                                        <option value="Gold"
                                            <% if(nominal.coinName === "Gold") { %>
                                                selected
                                                <% } %>
                                        >
                                            Gold
                                        </option>
                                        <option value="Diamond"
                                            <% if(nominal.coinName === "Diamond") { %>
                                                selected
                                                <% } %>
                                        >
                                            Diamond
                                        </option>
                                        <option value="Jewel"
                                            <% if(nominal.coinName === "Jewel") { %>
                                                selected
                                                <% } %>
                                        >
                                            Jewel
                                        </option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="coinQuantity"
                                        >Coin Quantity</label
                                    >
                                    <input
                                        type="number"
                                        class="form-control"
                                        id="coinQuantity"
                                        name="coinQuantity"
                                        placeholder="Enter coin quantity"
                                        value="<%= nominal.coinQuantity%>"
                                    />
                                </div>
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input
                                        type="number"
                                        class="form-control"
                                        id="price"
                                        name="price"
                                        placeholder="Enter price"
                                        value="<%= nominal.price %>"
                                    />
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
